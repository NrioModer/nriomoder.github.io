<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Календарь</title>
</head>
<body>
    <h1>Текущая дата:</h1>
    <p id="currentDate"></p>

    <script>
        // Функция для обновления даты
        function updateDate() {
            const now = new Date();
            const day = now.getDate();
            const month = now.toLocaleString('default', { month: 'long' });
            document.getElementById("currentDate").innerText = `${day} ${month}`;
        }

        // Вызов функции для обновления даты
        updateDate();
    </script>
</body>
</html>
